@using MudBlazor

<MudNavMenu>

    <!-- Inicio -->
    <MudNavLink Href="/home" Match="NavLinkMatch.All">
        <MudIcon Icon="@Icons.Material.Filled.Home" Class="me-2" />
        Inicio
    </MudNavLink>

    <!-- Productos -->
    <MudNavGroup Title="Productos" Icon="@Icons.Material.Filled.Inventory">
        <MudNavLink Href="productos">
            <MudIcon Icon="@Icons.Material.Filled.List" Class="me-2" />
            Ver Productos
        </MudNavLink>
        <MudNavLink Href="agregarproducto">
            <MudIcon Icon="@Icons.Material.Filled.AddBox" Class="me-2" />
            Agregar Producto
        </MudNavLink>
    </MudNavGroup>

    <!-- Categorías -->
    <MudNavGroup Title="Categorías" Icon="@Icons.Material.Filled.Category">
        <MudNavLink Href="categorias">
            <MudIcon Icon="@Icons.Material.Filled.List" Class="me-2" />
            Ver Categorías
        </MudNavLink>
        <MudNavLink Href="agregarcategorias">
            <MudIcon Icon="@Icons.Material.Filled.AddCircle" Class="me-2" />
            Agregar Categoría
        </MudNavLink>
    </MudNavGroup>

    <!-- Proveedores -->
    <MudNavGroup Title="Proveedores" Icon="@Icons.Material.Filled.LocalShipping">
        <MudNavLink Href="proveedores">
            <MudIcon Icon="@Icons.Material.Filled.List" Class="me-2" />
            Ver Proveedores
        </MudNavLink>
        <MudNavLink Href="agregarproveedores">
            <MudIcon Icon="@Icons.Material.Filled.PersonAdd" Class="me-2" />
            Agregar Proveedor
        </MudNavLink>
    </MudNavGroup>
    
    <!-- Ventas -->
    <MudNavGroup Title="Ventas" Icon="@Icons.Material.Filled.PointOfSale">
        <MudNavLink Href="ventas">
            <MudIcon Icon="@Icons.Material.Filled.List" Class="me-2" />
            Ver Ventas
        </MudNavLink>
        <MudNavLink Href="agregarventa">
            <MudIcon Icon="@Icons.Material.Filled.PersonAdd" Class="me-2" />
            Agregar Ventas
        </MudNavLink>
    </MudNavGroup>
    
    <!-- Inventario -->
    <MudNavGroup Title="Inventario" Icon="@Icons.Material.Filled.Warehouse">
        <MudNavLink Href="inventario/productos">
            <MudIcon Icon="@Icons.Material.Filled.Inventory" Class="me-2" />
            Productos (Inventario)
        </MudNavLink>
        <MudNavLink Href="inventario/stock-bajo">
            <MudIcon Icon="@Icons.Material.Filled.Report" Class="me-2" />
            Stock bajo mínimo
        </MudNavLink>
    </MudNavGroup>


</MudNavMenu>
