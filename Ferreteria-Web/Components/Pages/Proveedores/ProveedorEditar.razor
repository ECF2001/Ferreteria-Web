@page "/editarproveedor/{Id:int}"
@using Ferreteria_Web.Models
@using Ferreteria_Web.Services
@inject ProveedorService ProveedorService
@inject NavigationManager NavManager


<h3>Editar Proveedor</h3>

 <EditForm Model="@proveedor" OnValidSubmit="GuardarCambios">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label>Nombre</label>
            <InputText class="form-control" @bind-Value="proveedor.Nombre" />
        </div>

        <div class="mb-3">
            <label>Teléfono</label>
            <InputText class="form-control" @bind-Value="proveedor.Telefono" />
        </div>

        <div class="mb-3">
            <label>Correo</label>
            <InputText class="form-control" @bind-Value="proveedor.Correo" />
        </div>

        <div class="mb-3">
            <label>Dirección</label>
            <InputText class="form-control" @bind-Value="proveedor.Direccion" />
        </div>

        <button class="btn btn-primary" type="submit">Guardar</button>
    </EditForm>
}
@code {
  

    private ProveedorModel proveedor;
    private async Task GuardarCambios()
    {
        await ProveedorService.ActualizarAsync(proveedor);
        NavManager.NavigateTo("/proveedores");
    }
}