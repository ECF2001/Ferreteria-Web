@page "/agregarcategorias"
@using MudBlazor

<PageTitle>Agregar Categoría</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium" Class="mt-4">
    <MudText Typo="Typo.h3" GutterBottom="true" Align="Align.Center" Class="mb-4">
        Agregar Nueva Categoría
    </MudText>

    <EditForm Model="@_nuevaCategoria" OnValidSubmit="AgregarCategoria">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <MudGrid Justify="Justify.Center">
            <MudItem xs="12" sm="10" md="8">
                <MudCard Elevation="4">
                    <MudCardContent Class="pa-6">

                        <MudTextField T="string"
                                      Label="Nombre de Categoría"
                                      Required="true"
                                      @bind-Value="_nuevaCategoria.Nombre_Categoria"
                                      For="@(() => _nuevaCategoria.Nombre_Categoria)"
                                      RequiredError="El nombre es obligatorio"
                                      Margin="Margin.Normal"
                                      Variant="Variant.Outlined" />

                        <MudTextField T="string"
                                      Label="Descripción"
                                      @bind-Value="_nuevaCategoria.Descripcion"
                                      For="@(() => _nuevaCategoria.Descripcion)"
                                      Margin="Margin.Normal"
                                      Variant="Variant.Outlined"
                                      Lines="3" />

                    </MudCardContent>

                    <MudCardActions Class="pa-4 d-flex justify-end">
                        <MudButton ButtonType="ButtonType.Reset"
                                   Variant="Variant.Outlined"
                                   Color="Color.Secondary"
                                   Class="mr-3">
                            <MudIcon Icon="@Icons.Material.Filled.Clear" Class="mr-2" />
                            Limpiar
                        </MudButton>

                        <MudButton ButtonType="ButtonType.Submit"
                                   Variant="Variant.Filled"
                                   Color="Color.Primary">
                            Guardar Categoría
                        </MudButton>
                    </MudCardActions>
                </MudCard>
            </MudItem>
        </MudGrid>
    </EditForm>
</MudContainer>
